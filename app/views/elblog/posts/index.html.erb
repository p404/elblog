<p id="notice"><%= notice %></p>

<h1><%= t("elblog.views.index.title") %></h1>

<table>
  <thead>
    <tr>
      <th><%= t("activerecord.attributes.elblog/post.title") %></th>
      <th><%= t("activerecord.attributes.elblog/post.content") %></th>
      <th><%= t("activerecord.attributes.elblog/post.author") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content.html_safe %></td>
        <td><%= post.author %></td>
        <td><%= link_to t("elblog.actions.show"), post %></td>
        <td><%= link_to t("elblog.actions.edit"), edit_post_path(post) %></td>
        <td><%= link_to t("elblog.actions.destroy.text"), post, method: :delete, data: { confirm: t("elblog.actions.destroy.confirmation") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("elblog.views.new.title"), new_post_path %>
