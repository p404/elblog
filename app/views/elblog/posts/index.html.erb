<% @posts.each_with_index do |post, index| %>
  <section class="post_container">
    <header>
      <!-- Post Title -->
      <h1 class="post_title __link">
        <%= link_to post.title, post %>
      </h1>
      
      <!-- Post Info -->
      <div class="post_info-container">
        <a href="mailto:pablo@sequel.ninja" class="post_info-author"> 
          <%= post.author %>
        </a>

        <span class="post_dot">&nbsp;&middot;&nbsp;</span>

        <!-- TODO: Agregar fecha -->
        <span class="post_info-date">19 de enero 2015</span>

        <div class="post_tag-container">
          <span class="post_tag-icon"></span>
          <!-- TODO: Agregar tags, separados por coma -->
          <a href="" class="post_tag">TAG</a>
        </div>
      </div>
    </header>

    <div class="post_subheader-container">
      
      <!-- Banner -->
      <!-- TODO: Reemplazar banner dinamico -->
      <%= image_tag("elblog/img-banner", { class: "post_banner" }) %>


      <!-- Subheader -->
      <!-- TODO: Agregar contenido -->
      <h3 class="post_subheader">
        Estar con un pie adentro y otro afuera, parece la descripci&oacute;n que representa mejor por estos d&iacute;as a los chilenos. Un estudio realizado por la empresa <a href="" class="post_subheader-link">trabajando.com</a>, revel&oacute; cifras que muestran c&oacute;mo los chilenos se la pasan en vacaciones.
      </h3>
    </div>

    <div class="post_read-more">
      <%= link_to "Leer MÃ¡s", post %>
    </div>

  </section>

  <% if (index+1) < @posts.count %>
    <div class="post_separation"></div>
  <% end %>
    
    <!--
      <%= link_to t("elblog.actions.show"), post %>
      <%= link_to t("elblog.actions.edit"), edit_post_path(post) %>
      <%= link_to t("elblog.actions.destroy.text"), post, method: :delete, data: { confirm: t("elblog.actions.destroy.confirmation") } %>
    -->
<% end %>

<section class="paginate_container">
  <span class="paginate_element"> anterior </span>
  <span class="paginate_element">1</span>
  <span class="paginate_element">2</span>
  <span class="paginate_element __current">3</span>
  <span class="paginate_element">4</span>
  <span class="paginate_element">5</span>
  <span class="paginate_element"> siguiente </span>
</section>

